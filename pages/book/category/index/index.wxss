/**index.wxss**/
.category-wrap{
   display: flex;
}
.category-left{
    flex: 1;
   
    height: 100%;
}
.category-left view{
  font-size:30rpx;
}
.category-left view> view{
  margin:0rpx 10rpx;
  padding: 30rpx 0;
  border-bottom: 1px solid #eee;
}
.category-left view> view::before{
  content: '';
  height: 40rpx;
  width: 4rpx;
  display: inline-block;
  position: relative;
  top: 10rpx;
  margin:0 10rpx;
  background: transparent;
}
.category-left .active{
  background: #fafafa;
}
.category-left .active > view::before{
  background: #e93332;
}
.category-right{
   flex: 5;
   border-left: 1px solid #eee;
   /* transition: all 0.4s ease; */
   /* transform: translateY(-50%); */
   /* padding:60rpx  0; */
}
.category-group{
   margin:80rpx 24rpx 0;
   padding-top: 10rpx;
   position: relative;
}
.hr{
   height:1rpx;
   width: 100%;
   background: #ccc;
   position: absolute;
   top: 0rpx;
}
.category-title{
   text-align: center;
   position: absolute;
   background: #FFF;
   width: 100rpx; 
   height: 40rpx;
   top: -20rpx;
   font-size: 30rpx;
   color: #aaa;
   left: 50%;
   transform: translateX(-50%)
}
 
.category-list {
  /* display: flex; */
  margin: 30rpx 0 40rpx;
  overflow:hidden;
  /* flex-wrap: wrap; */
  justify-content: space-between;  
  
}
.category-list view{
  background: #f9f9f9;
  margin-right: 10rpx;
  text-align: center;
  font-size: 20rpx;
  
}
.category-list > .category-item navigator:nth-child(even){
   margin-right: 0;
   margin-left: 10rpx;
}

.category-item{
  display: flex;
  font-size: 30rpx;
  padding:30rpx 10rpx;
  margin-bottom: 16rpx;
  float: left;
}
.category-item navigator{
  display: flex;
}


.category-item .sub-name{
  font-size:26rpx;
  color: #98989a;
  width:106rpx;
}
.category-item .sub-name text{
  font-size: 30rpx;
  font-weight: bold;
  color: #555459;
}
.category-item .book-pics{
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
}
.category-item .book-pics  image{
  width: 50rpx;
  height: 76rpx;
  margin-right:10rpx;
}
.category-item .book-pics  image:nth-child(2){
  position: absolute;
  left: 46%;
  transform: translate3d(-50%,-50%,0);
  top: 40%;
}