  border-left-width: 0;
  border-right-width: 0;
  color: #666;
}
.chapter-item{
   border-bottom: 1px solid #eee;
   padding: 20rpx 30rpx;
   font-size: 30rpx;
   display: flex;
   justify-content: space-between;
}
