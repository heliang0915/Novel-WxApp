/* pages/book/search/index.wxss */
.search-wrap{
  padding:0 30rpx;
}
.search-top{
  display: flex;
  align-items: center;
}
.search{
   background: #f5f6f8;
   padding:10rpx 20rpx;
   margin:10rpx 30rpx 20rpx 0rpx;
   border-radius: 10rpx;
   flex: 1;
   color:#99989f;
   font-size: 26rpx;
   display: flex;
   align-items: center;
   width: 90%;
}
.search::before,.search-item view::before{
   content: '';
   display: inline-block;
   height: 26rpx;
   width: 26rpx;
   background: url('https://blogapi.top/assets/images/search-sm.png');
   background-size: 100% 100%;
   margin-right: 20rpx;
}

.cannel{
  font-size: 26rpx;
  color: #2eb897;
  margin-right: 20rpx;
}

.search-hot{
   font-size: 26rpx;
}
.search-hot .hot-title{
  color: #99989f;
  font-size: 26rpx;
  margin: 30rpx 0;
  display: flex;
  justify-content: space-between;
}

.search-hot view image{
   width:36rpx;
   height: 36rpx;
   margin-right: 20rpx;
}
.search-hot .hot-content{
    margin:20rpx 0;
    display: flex;
    flex-wrap: wrap;
}
.search-hot .tag{
  border: 1px solid #eaeaea;
  padding:10rpx 25rpx;
  margin: 12rpx 18rpx 12rpx 0;
  border-radius: 50rpx;
  color: #3c3b40;
  font-size: 26rpx;
  text-align: center;
}
 .tag.active{
    color: #e2793f;
    border:1px solid #e2793f;
 }

 /**
 * 检索结果弹层
 *
 */
 .search-reuslt{
   background:#FFF;
   position: absolute;
   top: 88rpx;
   left: 0;
   height:89%;
   width: 100%;
   font-size: 26rpx;
   padding-top: 40rpx; 
   
 }
 .search-item{
    line-height: 60rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 10rpx;
    margin-left: 30rpx;
 }
 .search-item > view::before{
    margin-right: 10rpx;
    height: 24rpx;
    width: 24rpx;
 }
 .search-item image{
   width: 36rpx;
   height: 36rpx;
   margin-right: 30rpx;
}
 .search-item .active{
    color: #e2793f;
 }



 

 