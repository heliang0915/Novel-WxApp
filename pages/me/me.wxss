/**index.wxss**/

.me-top{
  background: #409EFF;
   width: 100%;
   height: 360rpx;
   display: flex;
   align-items: center;
   flex-direction: column;
}
.me-top image{
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  margin-top: 50rpx;
}
.me-top text{
    margin-top: 20rpx;
    color: #FFF;
    font-size:30rpx;
}

.me-list{
  background: #f3f3f3; 
  overflow: hidden;
  width: 100%;
}

.me-item:nth-child(1){
  margin: 10px 0;
}
.me-item{
  margin: 1px 0;
  background: #FFF;
  height: 40rpx;
  display: flex;
  font-size: 26rpx;
  padding:30rpx 30rpx;
  justify-content: space-between;
  align-items: center;
}

.me-item image{
   width: 30rpx;
   height: 30rpx;
}
.me-item text{
  flex: 1;
  padding-left: 10rpx;
}

.ls{
  margin: 0px !important;
}



